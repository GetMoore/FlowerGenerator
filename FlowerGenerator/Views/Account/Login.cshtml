@model FlowerGenerator.ViewModels.LoginViewModel

<div class="container">
    <h2>Login</h2>
    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
    {
        <div class="row ">
            <div class="col-md-5">
                @Html.LabelFor(m => m.UserName, new { @class = "row col-md-5" })
                @Html.EditorFor(m => m.UserName, new { @class = "form-control" })
            </div>
        </div>
        <div class="row ">
            <div class="col-md-5">
                @Html.LabelFor(m => m.Password, new { @class = "row col-md-5" })
                @Html.EditorFor(m => m.Password, new { @class = "form-control row col-md-5" })
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                @Html.ValidationMessageFor(m => m.UserName)
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                @Html.ValidationMessageFor(m => m.Password)
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                @Html.ValidationSummary(true)
            </div>
        </div>

        <div class="row">
            <div class="col-md-5">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </div>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
